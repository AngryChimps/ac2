<?php
        $structure['namespace'] = '{{namespace}}';
        $structure['tableNames'] = [{{#each tables}}'{{tableName}}', {{/each}}];

    {{#each datastores}}
        $structure['datastores']['{{name}}']['name'] = '{{name}}';
        $structure['datastores']['{{name}}']['driver'] = '{{driver}}';
    {{#if isRiak2}}
        $structure['datastores']['{{name}}']['prefix'] = '{{prefix}}';
    {{/if}}
    {{#if isElasticsearch}}
        $structure['datastores']['{{name}}']['default_analyzer'] = '{{default_analyzer}}';
        $structure['datastores']['{{name}}']['shards'] = '{{shards}}';
        $structure['datastores']['{{name}}']['replicas'] = '{{replicas}}';
    {{/if}}
    {{/each}}

    {{#each tables}}
        $structure['tables']['{{tableName}}']['name'] = '{{tableName}}';
        $structure['tables']['{{tableName}}']['objectName'] = '{{objectName}}';
        $structure['tables']['{{tableName}}']['collectionName'] = '{{objectName}}Collection';
        $structure['tables']['{{tableName}}']['primaryDatastoreName'] = '{{primaryDatastore.name}}';

        $structure['tables']['{{tableName}}']['primaryKeyFieldNames'] = {{{primaryKeyFieldNamesString}}};
        $structure['tables']['{{tableName}}']['primaryKeyPropertyNames'] = {{{primaryKeyPropertyNamesString}}};
        $structure['tables']['{{tableName}}']['autoIncrementField'] = '{{autoIncrementField}}';
        $structure['tables']['{{tableName}}']['autoIncrementProperty'] = '{{autoIncrementProperty}}';
        $structure['tables']['{{tableName}}']['autoGenerateField'] = '{{autoGenerateField}}';
        $structure['tables']['{{tableName}}']['autoGenerateProperty'] = '{{autoGenerateProperty}}';
        $structure['tables']['{{tableName}}']['fieldNames'] = {{{fieldNamesString}}};
        $structure['tables']['{{tableName}}']['propertyNames'] = {{{propertyNamesString}}};
        $structure['tables']['{{tableName}}']['fieldTypes'] = {{{fieldTypesString}}};

        $structure['classes']['{{objectName}}']['tableName'] = '{{tableName}}';
        $structure['classes']['{{objectName}}']['primaryDatastoreName'] = '{{primaryDatastoreName}}';
        $structure['classes']['{{objectName}}Collection']['tableName'] = '{{tableName}}';
        $structure['classes']['{{objectName}}Collection']['primaryDatastoreName'] = '{{primaryDatastoreName}}';

    {{/each}}