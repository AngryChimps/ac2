<?xml version="1.0" encoding="UTF-8" ?>
<schema name="{{dsInfo.prefix}}{{name}}" version="1.5">
 <fields>
   {{#each fields}}
   <field name="{{name}}{{riakSolrSuffix}}"   type="{{type}}" indexed="{{riakIndexed}}" stored="true" multiValued="{{multiValued}}"/>
   {{/each}}

   <!-- All of these fields are required by Riak Search -->
   <field name="_yz_id"   type="_yz_str" indexed="true" stored="true"  multiValued="false" required="true"/>
   <field name="_yz_ed"   type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_pn"   type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_fpn"  type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_vtag" type="_yz_str" indexed="true" stored="false" multiValued="false"/>
   <field name="_yz_rk"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_rt"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_rb"   type="_yz_str" indexed="true" stored="true"  multiValued="false"/>
   <field name="_yz_err"  type="_yz_str" indexed="true" stored="false" multiValued="false"/>
 </fields>

 <uniqueKey>_yz_id</uniqueKey>

 <types>
    <fieldType name="Currency" class="solr.TrieFloatField" />
    <fieldType name="Counter" class="solr.TrieIntField" />
    <fieldType name="Location" class="solr.StrField" />
    <fieldType name="Date" class="solr.TrieDateField" />
    <fieldType name="DateTime" class="solr.TrieDateField" />
    <fieldType name="Uuid" class="solr.StrField" />
    <fieldType name="Email" class="solr.StrField" />
    <fieldType name="bool" class="solr.BoolField" />
    <fieldType name="string" class="solr.StrField" />
    <fieldType name="text" class="solr.TextField" />
    <fieldType name="int" class="solr.TrieIntField" />
    <fieldType name="long" class="solr.TrieLongField" />
    <fieldType name="float" class="solr.TrieFloatField" />
    <fieldType name="decimal" class="solr.TrieFloatField" />
    <fieldType name="enum" class="solr.TrieIntField" />
    <fieldType name="Currency[]" class="solr.TrieFloatField" />
    <fieldType name="Counter[]" class="solr.TrieIntField" />
    <fieldType name="Location[]" class="solr.StrField" />
    <fieldType name="Date[]" class="solr.TrieDateField" />
    <fieldType name="DateTime[]" class="solr.TrieDateField" />
    <fieldType name="Uuid[]" class="solr.StrField" />
    <fieldType name="Email[]" class="solr.StrField" />
    <fieldType name="bool[]" class="solr.BoolField" />
    <fieldType name="string[]" class="solr.StrField" />
    <fieldType name="text[]" class="solr.TextField" />
    <fieldType name="int[]" class="solr.TrieIntField" />
    <fieldType name="long[]" class="solr.TrieLongField" />
    <fieldType name="float[]" class="solr.TrieFloatField" />
    <fieldType name="decimal[]" class="solr.TrieFloatField" />
    <fieldType name="enum[]" class="solr.TrieIntField" />
    {{#each subclasses}}
    <fieldType name="{{type}}" class="solr.StrField" />
    {{/each}}

    <!-- YZ String: Used for non-analyzed fields -->
    <fieldType name="_yz_str" class="solr.StrField" sortMissingLast="true" />

 </types>
</schema>